        <field name="fiscal_position_id" ref="fiscal_position_cordoba_caba_and_proffits"/>
        <field name="default_tax_id" eval="ref('account.%s_%s' % (ref('base.company_ri'), 'ex_tax_withholding_profits_regimen_21_insc'))"/>
