<?xml version="1.0"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="backorder_id" position="after">
                    <!-- ningun out deberia mostrar el inverse_currency_rate-->
                    <label for="valuation_currency_id" invisible="not valuation_currency_id"/>
                    <div invisible="not valuation_currency_id">
                        <field name="inverse_currency_rate" nolabel="1" class="oe_inline" readonly="state == 'done'" required="not valuation_currency_id"/>
                        = 1 <field name="valuation_currency_id"  nolabel="1" options='{"no_open": True}' class="oe_inline"/>
                        <field name="currency_rate" nolabel="1" class="oe_inline" digits="[12,12]" invisible="1"/>
                    </div>
            </field>
        </field>
    </record>
</odoo>
