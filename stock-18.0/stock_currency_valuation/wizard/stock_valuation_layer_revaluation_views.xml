<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_valuation_layer_revaluation_form_view" model="ir.ui.view">
        <field name="name">stock.valuation.layer.revaluation.form</field>
        <field name="model">stock.valuation.layer.revaluation</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_revaluation_form_view"/>
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <label for="added_value" string="Added Value" invisible="not show_added_value_in_currency"/>
                <div class="o_row" invisible="not show_added_value_in_currency">
                    <span><field name="added_value_in_currency" options="{'currency_field': 'valuation_currency_id'}" class="oe_inline"/> = <field name="new_value_in_currency" options="{'currency_field': 'valuation_currency_id'}" class="oe_inline"/> (<field name="new_value_in_currency_by_qty" options="{'currency_field': 'valuation_currency_id'}" class="oe_inline ms-1"/> by <field name="product_uom_name" class="oe_inline me-1"/>)
                    <small class="mx-2 fst-italic">Use a negative added value to record a decrease in the product value</small></span>
                </div>
                <field name="valuation_currency_id" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
